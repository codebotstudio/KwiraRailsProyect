<section class="log-in">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
        <div class="well text-center">
          <h2 class="be-blue">Inicia sesión</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, placeholder:"Correo electrónico", autofocus: true, class:"form-control" %>
            </div>


            <div class="field">
              <%= f.password_field :password, placeholder:"Contraseña", autocomplete: "off", class:"form-control" %>
            </div>


            <div class="actions">
              <%= f.submit "Inicia sesión", class:"btn btn-primary btn-lg btn-block" %>
            </div>
          <% end %>
<!--      REVISAR RECUPERACIÓN DE CONTRASEÑAS
          <%= render "devise/shared/links" %> -->
        </div>
      </div>
    </div>
  </div>
</section>