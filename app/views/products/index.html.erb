<div class="container">
	<div class="row">
		<div class="col-md-12 text-right">
			<% if user_signed_in? %>
				<% if current_user.permission_level == "1" %>
				<% else %>
					<%= link_to "Registrar nuevo producto", new_product_path(@product), class:"btn btn-success btn-lg" %>
				<% end %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center top-head">Productos</h1>

			<a href="#quimicos" class="btn btn-lg btn-info">Químicos</a>
  &nbsp;
  <a href="#jarcieria" class="btn btn-lg btn-success">Jarciería</a>
  &nbsp;
  <a href="#otros" class="btn btn-lg btn-warning">Otros</a>

			  <h2 id="quimicos">Químicos</h2>
  <table class="table table-bordered" id="table1">
    <thead>
      <tr>
        <th>Producto</th>
        <th width="20%">Precio</th>
        <th width ="20%">Disponible</th>
        <th width="20%">Detalles</th>
      </tr>
    </thead>

    <tbody>
      <% @products.quimicos.each do |product| %>
        <% case product.product_type %>
        <% when 1 %>
        <tr class="info">
        <% when 2 %>
        <tr class="success">
        <% else %>
        <tr class="warning">
        <% end %>
    
          <td><%= product.sale_title %></td>
          <td> $ <%=product.sale_price %></td>
          <td> <%= product.units.to_s + " " + product.measurement_unit %>
              <% if product.critical != nil %>
               <% if product.units <= product.critical %>
               <%= fa_icon "exclamation-circle", class:"rojo" %>
               <% end %>
              <% end %>
          </td>
          <td class="text-center"><%= link_to 'Ver producto', product , class:"btn btn-warning" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2 id="jarcieria">Jarciería</h2>
  <table class="table table-bordered" id="table2">
